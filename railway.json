{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"]
    }
  },
  "deploy": {
    "startCommand": "gunicorn main:app --workers=2 --timeout 200 --preload",
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 5,
    "healthcheckPath": "/",
    "healthcheckTimeout": 60
  }
}
